{
  "Lua.runtime.version": "LuaJIT",
  "Lua.runtime.special": {
    "love.filesystem.load": "loadfile"
  },
  "Lua.workspace.library": [
    "${3rd}/love2d/library"
  ],
  "files.exclude": {
    "**/.vscode-oss/extensions/*": true,
    ".history/**": true,
    ".vscode/.history/**": true,
  },
  "editor.rulers": [
    {
      "column": 64,
      "color": "#444",
    },
    {
      "column": 80,
      "color": "#555",
    }
  ],
  "reflowMarkdown.preferredLineLength": 64,
}
